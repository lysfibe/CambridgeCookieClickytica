{{> head }}
<style>
	:root {
		--primary-dark: #1d2129;
		--secondary-dark: #616770; 
		--fb-blue: #4267b2;
		--link-blue: #365899;
		--action-blue: #3578e5;
	}

	* {
		box-sizing: border-box;
		font-family: Arial, Helvetica, sans-serif;
		font-size: 14px;
	}

	.site-header
	{
		background-color: #4267b2;
		position: fixed;
		top: 0;
		left: 0;
		right: 0;
		width: 100vw;
		padding: 12px;
		box-shadow: 0 0 1px rgba(0, 0, 0, 0.5);
	}

	.logo-block,
	.logo-block img
	{
		height: 24px;
		width: 24px;
	}

	.title
	{
		margin-left: 10px;
	}

	.title h1
	{
		font-size: 18px;
		line-height: 24px;
		color: #ffffff; 
		padding: 0;
		margin: 0;
	}


	.main
	{
		width: 100vw;
		height: 100vh;
		background-color: #e9ebee;
		padding-top: 80px;
		
	}

	.outer-container
	{
		margin: 0 auto;
		max-width: 1024px;
		width: 100%;
		
		display: flex;
	}

	.outer-container--site-header
	{

	}

	.outer-container--main
	{
		justify-content: space-between;
	}

	.container
	{
		
	}

	.container--cookie
	{
		width: 185px;
	}

	.container--news-feed
	{
		width: 500px;
	}

	.container--friends
	{
		width: 310px;
	}

	.post
	{
		background-color: #ffffff;
		border-radius: 5px;  
		border: 1px solid #dddfe2;
		padding: 12px;
	}

	.post span,
	.post p
	{
		color: var(--primary-dark);
	}

	.post__header
	{
		display: flex;
	}

	.post__avatar
	{
		height: 40px;
		width: 40px;
		border-radius: 50%;
		background-color: var(--action-blue);
		margin-right: 12px;
	}

	.post__usermeta h3
	{
		color: var(--link-blue);
		padding-bottom: 2px;	
		margin: 4px 0 0 0;
	}

	.post__usermeta span
	{
		color: var(--secondary-dark);
		font-size: 12px;
	}

	.post__interactions, .post__reactions
	{
		display: none;
	}

	.stat
	{
		display: inline-block;
		margin-left: 10px;
	}

	.stat > span
	{
		color: #ffffff;
		line-height: 24px;
		font-weight: bold;
	}

	.stat__label
	{
		margin-right: 4px;
	}

	.stat__count
	{
		background-color: rgba(0, 0, 0, 0.4);
		padding: 2px 4px;
		border-radius: 3px;
	}

	.stat-container
	{
		margin-left: auto;
	}

	.footer
	{
		position: fixed;
		bottom: 24px;
		left: 0;
		right: 0;
		text-align: center;
	}
</style>

<body>
	<div class="site-header">
